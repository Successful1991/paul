extends ../layout/main
block variable
    -
        var crumbs = [
        {
        title: 'Home',
        link: pagesLink[0].home
        }
        ];
        var titlePage = 'Delivery'
block meta
    title= 'Home'
    meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
    script(src='./assets/scripts/basketElem.js')
    script(src='./assets/scripts/basket.js')
    script(src='./assets/scripts/index.js')
    script(src='./assets/scripts/delivery.js')
block content
    include ../includes/crumbs.pug
    .delivery
        .title.delivery__title Delivery
        .delivery__description On this page you can find the products now available to deliver to specific London postcodes with a minimum order of £10 for delivery.The cut-off time to place your orders is 7am, and we require 24 hours’ notice. Please note that we cannot offer a specific delivery time slot. Deliveries will take place at any time between 9am and 1pm.

        .delivery__tabs.js-delivery__tab
            a(href='#'  data-type='Breakfast' ).delivery__tab Breakfast
            a(href='#'  data-type='Main Course' ).delivery__tab Main Course
            a(href='#'  data-type='Confectionery' ).delivery__tab Confectionery
            a(href='#'  data-type='Drinks' ).delivery__tab Drinks
            a(href='#'  data-type='Vienoisserie' ).delivery__tab Vienoisserie
            a(href='#'  data-type='Bread' ).delivery__tab Bread
            a(href='#'  data-type='Patisserie' ).delivery__tab Patisserie
            a(href='#'  data-type='Biscuits' ).delivery__tab Biscuits

        .delivery__info
            .delivery__amount
                | Showing
                span.delivery__amount--num.js-delivery__amount--num 35
                |products
