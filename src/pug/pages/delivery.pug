                    .dv-product__price 59 UAH
                .dv-product__button--wrap
                    button(type='button').dv-product__button.js-add__basket.link-dark ADD TO BASKET
                .dv-product__discount
                    .dv-product__new
                        img(src='./assets/images/delivery/new.png')
